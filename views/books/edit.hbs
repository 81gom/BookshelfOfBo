<h1>{{title}}</h1>
<form method="POST">
    <fieldset>
        <label for="booktitle" class="col-2">
            Book Title:
        </label>
        <input name="booktitle" id="booktitle" required value="{{book.booktitle}}" />
    </fieldset>
    <fieldset>
        <label for="author" class="col-2">
            Author:
        </label>
        <input name="author" id="author" value="{{book.author}}" />
    </fieldset>
    <fieldset>
        <label for="genre" class="col-2">
            Genre:
        </label>
        <select name="genre" id="genre">
            {{#each genres}}
            {{!-- <option>{{this.name}}</option> --}}
                {{createOption this.name ../book.genre}}
            {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <label for="readingday" class="col-2">
            Reading Day:
        </label>
        <input name="readingday" id="readingday" type="date" value="{{toShortDate book.readingday}}" />
    </fieldset>
    <fieldset>
        <label for="review" class="col-2">
            Review:
        </label>
        <input name="review" id="review" value="{{book.review}}" />
    </fieldset>

    <button class="offset-3 btn btn-info">
        SAVE
    </button>
</form>